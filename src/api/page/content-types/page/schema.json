{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Create static pages and navigation items"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 160
    },
    "menuLocation": {
      "type": "enumeration",
      "enum": ["header", "footer", "none"],
      "default": "none"
    },
    "menuOrder": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "shared.media",
        "shared.quote",
        "shared.rich-text",
        "shared.slider"
      ]
    },
    "seo": {
      "type": "component",
      "component": "shared.seo"
    },
    "isExternalLink": {
      "type": "boolean",
      "default": false
    },
    "externalUrl": {
      "type": "string"
    }
  }
}
